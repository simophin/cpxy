    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'cjk-proxy'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=cjk-proxy"
                ],
                "filter": {
                    "name": "cjk-proxy",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Client",
            "cargo": {
                "args": [
                    "build",
                    "--bin=proxy",
                    "--package=cjk-proxy"
                ],
                "filter": {
                    "name": "proxy",
                    "kind": "bin"
                }
            },
            "args": [
                "client",
                "--config=${HOME}/.proxy.yaml",
            ],
            "env": {
                "RUST_LOG": "info"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Standalone",
            "cargo": {
                "args": [
                    "build",
                    "--bin=proxy",
                    "--package=cjk-proxy"
                ],
                "filter": {
                    "name": "proxy",
                    "kind": "bin"
                }
            },
            "args": [
                "standalone",
                "--socks5-host=0.0.0.0",
                "--socks5-port=5000"
            ],
            "env": {
                "RUST_LOG": "debug"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Server",
            "cargo": {
                "args": [
                    "build",
                    "--bin=proxy",
                    "--package=cjk-proxy"
                ],
                "filter": {
                    "name": "proxy",
                    "kind": "bin"
                }
            },
            "args": [
                "server",
                "--port=8080"
            ],
            "env": {
                "RUST_LOG": "debug"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'proxy'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=proxy",
                    "--package=cjk-proxy"
                ],
                "filter": {
                    "name": "proxy",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}