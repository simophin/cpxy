    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'cjk-proxy'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=cjk-proxy"
                ],
                "filter": {
                    "name": "cjk-proxy",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Client",
            "cargo": {
                "args": [
                    "build",
                    "--bin=proxy",
                    "--package=cjk-proxy"
                    
                ],
                "filter": {
                    "name": "proxy",
                    "kind": "bin"
                }
            },
            "args": [
                "client",
                "--remote-host=127.0.0.1",
                "--remote-port=4200",
                "--socks5-port=8081"
            ],
            "env": {
                "RUST_LOG": "debug"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Server",
            "cargo": {
                "args": [
                    "build",
                    "--bin=proxy",
                    "--package=cjk-proxy"
                    
                ],
                "filter": {
                    "name": "proxy",
                    "kind": "bin"
                }
            },
            "args": [
                "server",
                "--host=127.0.0.1",
                "--port=4200"
            ],
            "env": {
                "RUST_LOG": "debug"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'proxy'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=proxy",
                    "--package=cjk-proxy"
                ],
                "filter": {
                    "name": "proxy",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}